<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輸入起始日期" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年:" />

        <EditText
            android:id="@+id/start_year_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="102"
            android:inputType="number"
            android:maxLength="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月:" />

        <EditText
            android:id="@+id/start_month_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:inputType="number"
            android:maxLength="2"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輸入結束日期" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年:" />

        <EditText
            android:id="@+id/end_year_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="102"
            android:inputType="number"
            android:maxLength="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月:" />

        <EditText
            android:id="@+id/end_month_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="9"
            android:inputType="number"
            android:maxLength="2"
             />
    </LinearLayout>

</LinearLayout>